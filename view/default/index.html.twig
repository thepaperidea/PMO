						<a class="cover" href="{{ ('project/' ~ content.project[4].slug) | absolute  }}">
							<h2>{{ content.project[4].name }}</h2>
							<span class="line"></span>
							<p>{{ datetime(content.project[4].timeline,'F j, Y') }}</p>
						</a>
					</article>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
