{% spaceless %}
{% if not asJson %}
<!DOCTYPE html>
<html itemscope itemtype="http://schema.org/Article" data-url="{{ data.constant.url }}">

  <head>
    <title>{{ content.title }}</title>
    <meta name="description" content="{{ content.description }}" />

    <meta itemprop="name" content="{{ content.name }}">
    <meta itemprop="description" content="{{ content.description }}">
    <meta itemprop="image" content="{{ (data.image.destination ~ content.google) | absolute }}">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@{{ content.user.twitterusername }}">
    <meta name="twitter:title" content="{{ content.name }}">
    <meta name="twitter:description" content="{{ content.description }}">
    <meta name="twitter:creator" content="@{{ content.user.twitterusername }}">
    <meta name="twitter:image:src" content="{{ (data.image.destination ~ content.twitter) | absolute }}">

    <meta property="og:title" content="{{ content.name }}" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="{{ data.constant.url ~ data.path.argument[0] }}" />
    <meta property="og:image" content="{{ (data.image.destination ~ content.facebook) | absolute }}" />
    <meta property="og:description" content="{{ content.description }}" />
    <meta property="og:site_name" content="{{ data.constant.name }}" />
    <meta property="article:published_time" content="{{ content.created }}" />
    <meta property="article:modified_time" content="{{ content.modified }}" />
    <meta property="article:section" content="{% block section %}About{% endblock %}" />
    <meta property="article:tag" content="{% block tag %}About{% endblock %}" />
    <meta property="article:author" content="{{ content.user.facebookid }}" />
    <meta property="fb:admins" content="{{ data.constant.fbadmin }}" />

    <link rel="stylesheet" href="{{ asset('css/global.css') }}" type="text/css">
    <link rel="stylesheet" media="screen and (min-width: 701px) and (max-width: 1400px)" href="{{ asset('css/medium.css') }}" type="text/css" />
    <link rel="stylesheet" media="only screen and (max-width: 700px), only screen and (max-device-width: 700px)" href="{{ asset('css/mobile.css') }}" type="text/css">

    <link rel="apple-touch-icon" sizes="57x57" href="{{ 'assets/favicons/apple-touch-icon-57x57.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ 'assets/favicons/apple-touch-icon-60x60.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ 'assets/favicons/apple-touch-icon-72x72.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ 'assets/favicons/apple-touch-icon-76x76.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ 'assets/favicons/apple-touch-icon-114x114.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ 'assets/favicons/apple-touch-icon-120x120.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ 'assets/favicons/apple-touch-icon-144x144.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ 'assets/favicons/apple-touch-icon-152x152.png' | absolute }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ 'assets/favicons/apple-touch-icon-180x180.png' | absolute }}">
    <link rel="icon" type="image/png" href="{{ 'assets/favicons/favicon-32x32.png' | absolute }}" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ 'assets/favicons/android-chrome-192x192.png' | absolute }}" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ 'assets/favicons/favicon-96x96.png' | absolute }}" sizes="96x96">
    <link rel="icon" type="image/png" href="{{ 'assets/favicons/favicon-16x16.png' | absolute }}" sizes="16x16">
    <link rel="manifest" href="{{ 'assets/favicons/manifest.json' | absolute }}">
    <link rel="mask-icon" href="{{ 'assets/favicons/safari-pinned-tab.svg' | absolute }}" color="#5bbad5">
    <link rel="shortcut icon" href="{{ 'assets/favicons/favicon.ico' | absolute }}">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="{{ 'assets/favicons/mstile-144x144.png' | absolute }}">
    <meta name="msapplication-config" content="{{ 'assets/favicons/browserconfig.xml' | absolute }}">
    <meta name="theme-color" content="#ffffff">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui" />
    {% block head %}{% endblock %}
  </head>

  <body>
    <div id="loader">
      <div id="icon">
        <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
        viewBox="-4.2 55.5 400.2 341.3" enable-background="new -4.2 55.5 400.2 341.3" xml:space="preserve">
        <g>
        <polygon fill="none" stroke="#52C3C2" stroke-width="12" stroke-linejoin="round" stroke-miterlimit="10" points="195.9,92.6
        1.8,61.5 195.9,365.1 390,61.5 	"/>
        </g>
        <g>
        <line fill="none" stroke="#53C3C2" stroke-width="9" stroke-miterlimit="10" x1="196" y1="97.5" x2="196" y2="201.5"/>
        <line fill="none" stroke="#53C3C2" stroke-width="9" stroke-miterlimit="10" x1="196" y1="223.5" x2="196" y2="250.8"/>
        <line fill="none" stroke="#53C3C2" stroke-width="9" stroke-miterlimit="10" x1="196" y1="266.1" x2="196" y2="284.3"/>
        <line fill="none" stroke="#53C3C2" stroke-width="9" stroke-miterlimit="10" x1="196" y1="302.8" x2="196" y2="314.8"/>
        <line fill="none" stroke="#53C3C2" stroke-width="9" stroke-miterlimit="10" x1="196" y1="387.7" x2="196" y2="396.8"/>
        </g>
        </svg>
      </div>
    </div>
    <header>
      <a class="ajax-nav" id="logo" title="Logo" href="{{ '' | absolute }}"></a>
      <nav>
        <ul>
          {% for each in data.page %}
          <li><a class="ajax-nav" href="{{ each.route | absolute }}">{{ each.name }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </header>

    <main>
    <div class="ajax-container">
        <div id="ajax-content">{% block main %}{% endblock %}</div>
    </div>
    </main>

    <footer>
    Copyrights Travrnr 2016. All rights reserved.
    </footer>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBr8w15LAHx1687bVh1tMk0CyvGWsSBBLk&callback=initMap"></script>
    <script src="{{ asset('js/jquery-2.1.4.min.js') }}"></script>
    <script src="{{ asset('js/ajax.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script src="{{ asset('js/download.js') }}"></script>
    <script type="text/javascript">
    script('{% block script %}{% endblock %}');
    </script>
  </body>
</html>
{% else %}
    {{ json_encode(content.title,block('main'),block('script')) }}
{% endif %}
{% endspaceless %}
